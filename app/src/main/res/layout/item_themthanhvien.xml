<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="13sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm thành viên"
        android:textStyle="bold"
        android:textColor="#f98899"
        android:textSize="26sp"
        />
    <EditText
        android:id="@+id/edtNhapHoTenTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ tên"
        android:textStyle="italic"
        android:textSize="22sp"
        />
    <EditText
        android:id="@+id/edtNhapNamSinhTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập năm sinh"
        android:textStyle="italic"
        android:textSize="22sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnThemThanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textSize="22sp"
            android:background="#FFCCCC"
            />
        <Button
            android:id="@+id/btnDongThemThanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFCCCC"
            android:text="Hủy"
            android:textSize="22sp"
            />
    </LinearLayout>

</LinearLayout>